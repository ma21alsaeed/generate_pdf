<body style="color: #333; font-family: Arial, sans-serif; padding: 20px;">
    <h2 style="color: #2ecc71; margin-bottom: 10px;">Accommodation Services</h2>
    <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px; border: 1px solid #ccc;">
        <thead>
            <tr style="background-color: #f2f2f2;">
                <th style="text-align: left; padding: 10px; border-right: 1px solid #ccc;">Accommodation</th>
                <th style="text-align: left; padding: 10px; border-right: 1px solid #ccc;">Price</th>
                <th style="text-align: left; padding: 10px; border-right: 1px solid #ccc;">Check-In</th>
                <th style="text-align: left; padding: 10px; border-right: 1px solid #ccc;">Check-Out</th>
                <th style="text-align: left; padding: 10px; border-right: 1px solid #ccc;">Nights</th>
                <th style="padding: 10px;">Accommodation Name</th>
            </tr>
        </thead>
        <tbody>
            <% accommodation.forEach((service, index) => { %>
                <tr style="border-bottom: <%= index < accommodation.length - 1 ? '1px solid #ccc' : 'none' %>;">
                    <td style="padding: 10px; border-right: 1px solid #ccc;"><%= service.Name %></td>
                    <td style="padding: 10px; border-right: 1px solid #ccc;"><%= service.Price ? service.Price : 'N/A' %></td>
                    <td style="padding: 10px; border-right: 1px solid #ccc;"><%= new Date(service.CheckInDate).toLocaleString() %></td>
                    <td style="padding: 10px; border-right: 1px solid #ccc;"><%= new Date(service.CheckOutDate).toLocaleString() %></td>
                    <td style="padding: 10px; border-right: 1px solid #ccc;"><%= service.Nights %></td>
                    <td style="padding: 10px;">
                        <a href="<%= service.AccommodationImages %>"><%= service.AccommodationName %></a>
                    </td>
                    
                </tr>
            <% }); %>
        </tbody>
    </table>

    <h2 style="color: #2ecc71; margin-bottom: 10px;">Flight Services</h2>
    <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px; border: 1px solid #ccc;">
        <thead>
            <tr style="background-color: #f2f2f2;">
                <th style="text-align: left; padding: 10px; border-right: 1px solid #ccc;">Flight</th>
                <th style="text-align: left; padding: 10px; border-right: 1px solid #ccc;">Ticket Price</th>
                <th style="text-align: left; padding: 10px; border-right: 1px solid #ccc;">Price</th>
                <th style="text-align: left; padding: 10px; border-right: 1px solid #ccc;">Departure</th>
                <th style="text-align: left; padding: 10px; border-right: 1px solid #ccc;">Arrival</th>
            </tr>
        </thead>
        <tbody>
            <% flights.forEach((service, index) => { %>
                <tr style="border-bottom: <%= index < flights.length - 1 ? '1px solid #ccc' : 'none' %>;">
                    <td style="padding: 10px; border-right: 1px solid #ccc;"><%= service.Name %></td>
                    <td style="padding: 10px; border-right: 1px solid #ccc;"><%= service.TicketPrice %></td>
                    <td style="padding: 10px; border-right: 1px solid #ccc;""><%= service.Price %></td>
                    <td style="padding: 10px; border-right: 1px solid #ccc;"><%= new Date(service.DepartureDate).toLocaleString() %></td>
                    <td style="padding: 10px;"><%= new Date(service.ArrivalDate).toLocaleString() %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <h2 style="color: #2ecc71; margin-bottom: 10px;">Transportation Services</h2>
    <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px; border: 1px solid #ccc;">
        <thead>
            <tr style="background-color: #f2f2f2;">
                <th style="text-align: left; padding: 10px; border-right: 1px solid #ccc;">Transportation</th>
                <th style="text-align: left; padding: 10px; border-right: 1px solid #ccc;">Price</th>
                <th style="text-align: left; padding: 10px; border-right: 1px solid #ccc;">Departure</th>
                <th style="text-align: left; padding: 10px; border-right: 1px solid #ccc;">Return</th>
            </tr>
        </thead>
        <tbody>
            <% transportation.forEach((service, index) => { %>
                <tr style="border-bottom: <%= index < transportation.length - 1 ? '1px solid #ccc' : 'none' %>;">
                    <td style="padding: 10px; border-right: 1px solid #ccc;"><%= service.Name %></td>
                    <td style="padding: 10px; border-right: 1px solid #ccc;"><%= service.Price %></td>
                    <td style="padding: 10px; border-right: 1px solid #ccc;"><%= new Date(service.Departure_Date).toLocaleString() %></td>
                    <td style="padding: 10px;"><%= new Date(service.Return_Date).toLocaleString() %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <!-- Terms and Conditions section -->
    <h2 style="color: #2ecc71; margin-bottom: 10px;">Terms and Conditions</h2>
    <div>
        <% terms.forEach(term => { %>
            <div style="margin-bottom: 20px; padding: 10px; border: 1px solid #ccc; background-color: #f9f9f9;">
                <h3 style="color: #2ecc71;"><%= term.company %></h3>
                <div>
                    <%- term.canelation_policy %> <!-- Directly insert the HTML content -->
                </div>
            </div>
        <% }); %>
    </div>
</body>
