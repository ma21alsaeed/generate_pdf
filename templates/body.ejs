<body style="color: #333; font-family: Arial, sans-serif; padding: 20px;">
    <h2 style="color: #2ecc71;">Accommodation Services</h2>
    <table style="width: 80%; border-collapse: collapse; margin-bottom: 20px; border: 1px solid #ccc;">
        <thead>
            <tr style="background-color: #f2f2f2;">
                <th style="text-align: left;">Accommodation</th>
                <th style="text-align: left;">Price</th>
                <th style="text-align: left;">Check-In Date</th>
                <th style="text-align: left;">Check-Out Date</th>
            </tr>
        </thead>
        <tbody>
            <% accommodation.forEach(service => { %>
                <tr>
                    <td><%= service.Name %></td>
                    <td><%= service.Price ? service.Price : 'N/A' %></td>
                    <td><%= new Date(service.CheckInDate).toLocaleDateString() %></td>
                    <td><%= new Date(service.CheckOutDate).toLocaleDateString() %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <h2 style="color: #2ecc71;">Flight Services</h2>
    <table style="width: 80%; border-collapse: collapse; margin-bottom: 20px; border: 1px solid #ccc;">
        <thead>
            <tr style="background-color: #f2f2f2;">
                <th style="text-align: left;">Flight</th>
                <th style="text-align: left;">Ticket Price</th>
                <th style="text-align: left;">Price</th>
                <th style="text-align: left;">Departure Date</th>
                <th style="text-align: left;">Departure Time</th>
                <th style="text-align: left;">Arrival Date</th>
                <th style="text-align: left;">Arrival Time</th>
            </tr>
        </thead>
        <tbody>
            <% flights.forEach(service => { %>
                <tr>
                    <td><%= service.Name %></td>
                    <td><%= service.TicketPrice %></td>
                    <td><%= service.Price %></td>
                    <td><%= new Date(service.DepartureDate).toLocaleDateString() %></td>
                    <td><%= service.DepartureTime %></td>
                    <td><%= new Date(service.ArrivalDate).toLocaleDateString() %></td>
                    <td><%= service.ArrivalTime %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <h2 style="color: #2ecc71;">Transportation Services</h2>
    <table style="width: 80%; border-collapse: collapse; margin-bottom: 20px; border: 1px solid #ccc;">
        <thead>
            <tr style="background-color: #f2f2f2;">
                <th style="text-align: left;">Transportation</th>
                <th style="text-align: left;">Price</th>
                <th style="text-align: left;">Departure Date</th>
                <th style="text-align: left;">Return Date</th>
            </tr>
        </thead>
        <tbody>
            <% transportation.forEach(service => { %>
                <tr>
                    <td><%= service.Name %></td>
                    <td><%= service.Price ? service.Price : 'N/A' %></td>
                    <td><%= new Date(service.Departure_Date).toLocaleDateString() %></td>
                    <td><%= new Date(service.Return_Date).toLocaleDateString() %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <!-- Terms and Conditions section -->
    <h2 style="color: #2ecc71;">Terms and Conditions</h2>
    <div>
        <% terms.forEach(term => { %>
            <div style="margin-bottom: 20px; padding: 10px; border: 1px solid #ccc; background-color: #f9f9f9;">
                <h3 style="color: #2ecc71;"><%= term.company %></h3>
                <div>
                    <%- term.canelation_policy %> <!-- Directly insert the HTML content -->
                </div>
            </div>
        <% }); %>
    </div>

</body>
