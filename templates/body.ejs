<body style="color: #333; font-family: Arial, sans-serif; padding: 20px;">
    <h2 style="color: #2ecc71;">Accommodation Services</h2>
    <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px; border: 1px solid #ccc;">
        <thead>
            <tr style="background-color: #f2f2f2;">
                <th>Accommodation</th>
                <th>Price</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            <% accommodation.forEach(service => { %>
                <tr>
                    <td><%= service.Name %></td>
                    <td><%= service.Price %></td>
                    <td><%= service.Date %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <h2 style="color: #2ecc71;">Flight Services</h2>
    <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px; border: 1px solid #ccc;">
        <thead>
            <tr style="background-color: #f2f2f2;">
                <th>Flight</th>
                <th>Price</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            <% flights.forEach(service => { %>
                <tr>
                    <td><%= service.Name %></td>
                    <td><%= service.Price %></td>
                    <td><%= service.Date %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <h2 style="color: #2ecc71;">Transportation Services</h2>
    <table style="width: 100%; border-collapse: collapse; border: 1px solid #ccc;">
        <thead>
            <tr style="background-color: #f2f2f2;">
                <th>Transportation</th>
                <th>Price</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            <% transportation.forEach(service => { %>
                <tr>
                    <td><%= service.Name %></td>
                    <td><%= service.Price %></td>
                    <td><%= service.Date %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
